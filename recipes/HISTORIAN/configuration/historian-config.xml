<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration>

  <property require-input="true">
    <name>historian.install.dir</name>
    <value>/root</value>
    <description>Directory under which source code will be downloaded and built</description>
  </property> 

  <property require-input="true">
    <name>cronus.repo</name>
    <value>https://github.com/hortonworks/fieldeng-cronus.git</value>
    <description>Online location to download Cronus (Platform)</description>
  </property> 

  <property require-input="true">
    <name>rhea.repo</name>
    <value>https://github.com/hortonworks/fieldeng-rhea.git</value>
    <description>Online location to download Rhea (UI)</description>
  </property> 

  <property require-input="true">
    <name>scythe.repo</name>
    <value>https://github.com/hortonworks/fieldeng-scythe.git</value>
    <description>Online location to download Scythe (DS library)</description>
  </property> 

  <property require-input="true">
    <name>historian.simulator.repo</name>
    <value>https://github.com/vakshorton/DataSimulators.git</value>
    <description>Online location to download data simulator package</description>
  </property>
  
    <property require-input="true">
    <name>historian.historian.repo.username</name>
    <value></value>
    <property-type>PASSWORD</property-type>
    <description>Historian repo username</description>
        <value-attributes>
		<type>password</type>
    </value-attributes>
  </property> 
  
  <property require-input="true">
    <name>historian.historian.repo.password</name>
    <value></value>
    <property-type>PASSWORD</property-type>
    <description>Historian repo password</description>
    <value-attributes>
		<type>password</type>
    </value-attributes>
  </property> 
  
    <property require-input="true">
    <name>cronus.api.port</name>
    <value>8055</value>
    <description>The port that Cronus Nifi API will listen on</description>
  </property>
  
  <property require-input="true">
    <name>rhea.ui.port</name>
    <value>8092</value>
    <description>The port that Rhea UI will listen on</description>
  </property>
  
  <property require-input="true">
    <name>cronus.home.dir</name>
    <value>/home/cronus</value>
    <description>The workspace directory for Cronus</description>
  </property>
  
</configuration>

